{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "rangeStrategy": "bump",
  "labels": ["dependencies"],
  "schedule": ["after 9am on monday"],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,
  "packageRules": [
    {
      "matchPackagePatterns": ["^@radix-ui/"],
      "groupName": "radix-ui",
      "groupSlug": "radix-ui"
    }
  ]
}
